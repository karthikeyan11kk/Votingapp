<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.VerifiyId"
    android:background="@drawable/bg">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/h3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="17dp"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/productsans_bold"
                android:text="@string/verify_id"
                android:textColor="@color/orange"
                android:textSize="18sp" />

            <LinearLayout
                android:id="@+id/ll1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/h3"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="33dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="39dp"
                android:background="@drawable/white_background"
                android:elevation="10dp"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/productsans_bold"
                    android:includeFontPadding="false"
                    android:text="Name"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="@color/text2"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/userName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/productsans_bold"
                    android:includeFontPadding="false"
                    android:text="Mr. XYX"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/productsans_bold"
                    android:includeFontPadding="false"
                    android:text="Phone Number"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="@color/text2"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/userPhoneNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/productsans_bold"
                    android:includeFontPadding="false"
                    android:text="8888822222"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="17sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/enterId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll1"
                android:layout_marginStart="30dp"
                android:layout_marginTop="60dp"
                android:fontFamily="@font/productsans_bold"
                android:text="@string/confirm_your_vote"
                android:textAllCaps="true"
                android:textColor="@color/green"
                android:letterSpacing="0.06"
                android:textSize="18sp"
                android:includeFontPadding="false"/>

            <EditText
                android:id="@+id/idproof"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/enterId"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="30dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="30dp"
                android:backgroundTint="@color/orange"
                android:fontFamily="@font/productsans_regular"
                android:textSize="16sp"
                android:hint="ID Number (more than 12 digits)"
                android:inputType="number"
                android:textAllCaps="true"
                android:textColor="@color/orange"
                android:textColorHint="@color/orange" />

            <Button
                android:id="@+id/verifyagebutton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/idproof"
                android:layout_marginTop="24dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="16dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/button1_ripple"
                android:elevation="8dp"
                android:fontFamily="@font/productsans_bold"
                android:padding="15dp"
                android:text="@string/confirm"
                android:textColor="@android:color/white"
                android:letterSpacing="0.08"
                android:includeFontPadding="false"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/confirmTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/verifyagebutton"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="30dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="30dp"
                android:textStyle="bold"
                android:fontFamily="@font/productsans_regular"
                android:text="Enter your Aadhaar number"
                android:textColor="@color/orange"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="338dp"
                android:layout_centerHorizontal="true"
                android:layout_height="224dp"
                android:layout_below="@id/confirmTxt"
                android:layout_marginTop="27dp"
                android:src="@drawable/aadharcard" />

        </RelativeLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
