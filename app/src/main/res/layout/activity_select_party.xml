<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SelectParty">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/logo1"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/vote_white_logo" />

        <TextView
            android:id="@+id/h3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/productsans_bold"
            android:text="@string/parties"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/h3"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.cardview.widget.CardView
                    android:id="@+id/card1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="30dp"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="8dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/white_background">

                        <ImageView
                            android:id="@+id/partyOneImage"
                            android:layout_width="84dp"
                            android:layout_height="84dp"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="20dp"
                            android:src="@drawable/man" />

                        <TextView
                            android:id="@+id/partOneTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="10dp"
                            android:layout_below="@id/partyOneImage"
                            android:fontFamily="@font/productsans_bold"
                            android:text="Abhay Deol"
                            android:layout_centerHorizontal="true"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="21sp" />

                        <TextView
                            android:id="@+id/partOneDes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/partOneTxt"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginEnd="8dp"
                            android:layout_centerHorizontal="true"
                            android:fontFamily="@font/productsans_regular"
                            android:text="Janata Party"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="15sp" />


                        <Button
                            android:id="@+id/party1"
                            android:layout_width="120dp"
                            android:layout_height="38dp"
                            android:layout_marginEnd="8dp"
                            android:background="@drawable/choose_button_ripple"
                            android:fontFamily="@font/productsans_bold"
                            android:text="CHOOSE"
                            android:textAllCaps="true"
                            android:includeFontPadding="false"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@id/partOneDes"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="20dp"
                            android:textColor="@android:color/white"
                            android:textSize="14sp" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/card1"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="30dp"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="8dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/white_background">

                        <ImageView
                            android:id="@+id/partyTwoImage"
                            android:layout_width="84dp"
                            android:layout_height="84dp"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="20dp"
                            android:src="@drawable/woman" />

                        <TextView
                            android:id="@+id/partTwoTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="10dp"
                            android:layout_below="@id/partyTwoImage"
                            android:fontFamily="@font/productsans_bold"
                            android:text="Priti Rajkhowa"
                            android:layout_centerHorizontal="true"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="21sp"/>

                        <TextView
                            android:id="@+id/partTwoDes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/partTwoTxt"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginEnd="8dp"
                            android:layout_centerHorizontal="true"
                            android:fontFamily="@font/productsans_regular"
                            android:text="Republic Party"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="15sp"/>


                        <Button
                            android:id="@+id/party2"
                            android:layout_width="120dp"
                            android:layout_height="38dp"
                            android:layout_marginEnd="8dp"
                            android:background="@drawable/choose_button_ripple"
                            android:fontFamily="@font/productsans_bold"
                            android:text="CHOOSE"
                            android:textAllCaps="true"
                            android:includeFontPadding="false"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@id/partTwoDes"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="20dp"
                            android:textColor="@android:color/white"
                            android:textSize="14sp"/>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/card2"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="30dp"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="8dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/white_background">

                        <ImageView
                            android:id="@+id/partyThreeImage"
                            android:layout_width="84dp"
                            android:layout_height="84dp"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="20dp"
                            android:src="@drawable/woman_1"/>

                        <TextView
                            android:id="@+id/partThreeTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="10dp"
                            android:layout_below="@id/partyThreeImage"
                            android:fontFamily="@font/productsans_bold"
                            android:text="Bimala Rabha"
                            android:layout_centerHorizontal="true"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="21sp"/>

                        <TextView
                            android:id="@+id/partThreeDes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/partThreeTxt"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginEnd="8dp"
                            android:layout_centerHorizontal="true"
                            android:fontFamily="@font/productsans_regular"
                            android:text="Democratic Party"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="15sp"/>


                        <Button
                            android:id="@+id/party3"
                            android:layout_width="120dp"
                            android:layout_height="38dp"
                            android:layout_marginEnd="8dp"
                            android:background="@drawable/choose_button_ripple"
                            android:fontFamily="@font/productsans_bold"
                            android:text="CHOOSE"
                            android:textAllCaps="true"
                            android:includeFontPadding="false"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@id/partThreeDes"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="20dp"
                            android:textColor="@android:color/white"
                            android:textSize="14sp"/>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/card3"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="30dp"
                    android:layout_marginEnd="30dp"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="8dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/white_background">

                        <ImageView
                            android:id="@+id/partyFourImage"
                            android:layout_width="84dp"
                            android:layout_height="84dp"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="20dp"
                            android:src="@drawable/man_2"/>

                        <TextView
                            android:id="@+id/partFourTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="10dp"
                            android:layout_below="@id/partyFourImage"
                            android:fontFamily="@font/productsans_bold"
                            android:text="Kamal Hassan"
                            android:layout_centerHorizontal="true"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="21sp"/>

                        <TextView
                            android:id="@+id/partFourDes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/partFourTxt"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginEnd="8dp"
                            android:layout_centerHorizontal="true"
                            android:fontFamily="@font/productsans_regular"
                            android:text="Muslim Party"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="15sp" />


                        <Button
                            android:id="@+id/party4"
                            android:layout_width="120dp"
                            android:layout_height="38dp"
                            android:layout_marginEnd="8dp"
                            android:background="@drawable/choose_button_ripple"
                            android:fontFamily="@font/productsans_bold"
                            android:text="CHOOSE"
                            android:textAllCaps="true"
                            android:includeFontPadding="false"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@id/partFourDes"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="20dp"
                            android:textColor="@android:color/white"
                            android:textSize="14sp" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>


            </RelativeLayout>
        </androidx.core.widget.NestedScrollView>

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>