<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".activities.AdminActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/h3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="18sp"
                android:layout_marginEnd="20dp"
                android:fontFamily="@font/productsans_bold"
                android:text="@string/admin"
                android:textColor="@color/orange"
                android:textSize="18sp" />


            <androidx.cardview.widget.CardView
                android:id="@+id/card1"
                android:layout_below="@id/h3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="30dp"
                app:cardCornerRadius="15dp"
                app:cardElevation="8dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/white_background">

                    <ImageView
                        android:id="@+id/partyOneImage"
                        android:layout_width="150dp"
                        android:layout_height="84dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/ogol"
                        android:scaleType="centerCrop"/>

                    <TextView
                        android:id="@+id/partOneTxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="4dp"
                        android:layout_below="@id/partyOneImage"
                        android:fontFamily="@font/productsans_bold"
                        android:text="Total Vote"
                        android:textAllCaps="true"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/black"
                        android:letterSpacing="0.06"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/totalVote"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/partOneTxt"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="20dp"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="@font/productsans_regular"
                        android:text="00"
                        android:textColor="@color/black"
                        android:textSize="45sp" />
                </RelativeLayout>

            </androidx.cardview.widget.CardView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/resultTxt"
                android:text="Party Result"
                android:fontFamily="@font/productsans_bold"
                android:textColor="@color/green"
                android:layout_below="@id/card1"
                android:layout_marginTop="40dp"
                android:letterSpacing="0.06"
                android:textSize="18sp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="30dp"/>


            <LinearLayout
                android:id="@+id/linear1"
                android:layout_below="@id/resultTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="8dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="15dp"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="8dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/white_background">

                        <TextView
                            android:id="@+id/party1Txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="4dp"
                            android:fontFamily="@font/productsans_bold"
                            android:text="LOTUS"
                            android:textAllCaps="true"
                            android:layout_centerHorizontal="true"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/jtotalVote"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/party1Txt"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginBottom="10dp"
                            android:layout_centerHorizontal="true"
                            android:fontFamily="@font/productsans_regular"
                            android:text="00"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="18sp" />
                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="30dp"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="8dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/white_background">

                        <TextView
                            android:id="@+id/party2Txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="4dp"
                            android:fontFamily="@font/productsans_bold"
                            android:text="TORCH"
                            android:textAllCaps="true"
                            android:layout_centerHorizontal="true"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/rtotalVote"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/party2Txt"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginBottom="10dp"
                            android:layout_centerHorizontal="true"
                            android:fontFamily="@font/productsans_regular"
                            android:text="00"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="18sp" />
                    </RelativeLayout>

                </androidx.cardview.widget.CardView>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear2"
                android:layout_below="@id/linear1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginTop="30dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="15dp"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="8dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/white_background">

                        <TextView
                            android:id="@+id/party3Txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="4dp"
                            android:fontFamily="@font/productsans_bold"
                            android:text="RISING SUN"
                            android:textAllCaps="true"
                            android:layout_centerHorizontal="true"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/dtotalVote"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/party3Txt"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginBottom="10dp"
                            android:layout_centerHorizontal="true"
                            android:fontFamily="@font/productsans_regular"
                            android:text="00"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="18sp" />
                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="30dp"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="8dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/white_background">

                        <TextView
                            android:id="@+id/party4Txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="4dp"
                            android:fontFamily="@font/productsans_bold"
                            android:text="TWO LEAVES"
                            android:textAllCaps="true"
                            android:layout_centerHorizontal="true"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/mtotalVote"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/party4Txt"
                            android:layout_marginStart="8dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginBottom="10dp"
                            android:layout_centerHorizontal="true"
                            android:fontFamily="@font/productsans_regular"
                            android:text="00"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="18sp" />
                    </RelativeLayout>

                </androidx.cardview.widget.CardView>


            </LinearLayout>


            <Button
                android:id="@+id/individualVoteBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_below="@id/linear2"
                android:layout_marginTop="36dp"
                android:textColor="@color/white"
                android:fontFamily="@font/productsans_bold"
                android:textSize="17sp"
                android:layout_centerHorizontal="true"
                android:onClick="individualVote"
                android:background="@drawable/button1_ripple"
                android:text="@string/individual_votes"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_alignBottom="@id/individualVoteBtn"
                android:layout_marginBottom="-82dp"
                android:background="@drawable/button2_ripple"
                android:fontFamily="@font/productsans_bold"
                android:onClick="logoutFromAdmin"
                android:text="Logout"
                android:textColor="@color/white"
                android:textSize="17sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </RelativeLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>